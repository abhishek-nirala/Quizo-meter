{
  "compilerOptions": {
    "target": "ES2020",           // Modern JS version
    "module": "commonjs",         // CommonJS for Node.js
    "rootDir": "./src",           // Your TS source files
    "outDir": "./dist",           // Compiled JS output
    "strict": true,               // Enable strict type checking
    "esModuleInterop": true,      // Allow default imports
    "skipLibCheck": true          // Speed up compilation
  },
  "include": ["src/**/*"],
  "exclude": ["dist"]
}
